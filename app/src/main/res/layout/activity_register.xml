<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/register_text_view"
        android:layout_width="222dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="ลงทะเบียน"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_register_edit_text"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/username_register_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/register_text_view"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/register_text_view"
        app:layout_constraintTop_toBottomOf="@+id/register_text_view"
        app:layout_constraintVertical_bias="0.19999999"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/username_register_edit_text"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/password_register_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/id_register_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/id_register_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/id_register_edit_text" />

    <EditText
        android:id="@+id/password_register_edit_text"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/re_password_register_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/username_register_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/username_register_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/username_register_edit_text" />

    <EditText
        android:id="@+id/re_password_register_edit_text"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/password_register_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/password_register_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/password_register_edit_text" />

    <Button
        android:id="@+id/create_acc_button"
        android:layout_width="158dp"
        android:layout_height="42dp"
        android:layout_marginBottom="64dp"
        android:background="#4CBAB0"
        android:text="สร้างบัญชี"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warning_register_text_view" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="148dp"
        android:layout_height="26dp"
        android:text="กรอก ไอดี"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/id_register_edit_text"
        app:layout_constraintStart_toStartOf="@+id/id_register_edit_text" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="148dp"
        android:layout_height="26dp"
        android:text="กรอก ชื่อ"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/username_register_edit_text"
        app:layout_constraintStart_toStartOf="@+id/username_register_edit_text" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="148dp"
        android:layout_height="26dp"
        android:text="กรอก พาสเวิร์ด"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/password_register_edit_text"
        app:layout_constraintStart_toStartOf="@+id/password_register_edit_text" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:text="กรอก พาสเวิร์ด อีกครั้ง"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/re_password_register_edit_text"
        app:layout_constraintStart_toStartOf="@+id/re_password_register_edit_text" />

    <TextView
        android:id="@+id/warning_register_text_view"
        android:layout_width="307dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:textColor="#FD0000"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/create_acc_button"
        app:layout_constraintEnd_toEndOf="@+id/re_password_register_edit_text"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/re_password_register_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/re_password_register_edit_text"
        app:layout_constraintVertical_bias="0.48000002"
        tools:text="####################" />

</androidx.constraintlayout.widget.ConstraintLayout>